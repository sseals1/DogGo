@model DogGo.Models.ViewModels.WalkersViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Walker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Walker.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Walker => Walker.Walker.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Walker => Walker.Walker.Neighborhood)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Walker => Walker.Walker.Neighborhood.Name)
        </dd>
    </dl>
    <td>
            <img src="@Model.Walker.ImageUrl" alt="avatar" />
    </td>
    <td>

        @foreach (Walks w in Model.Walks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => w.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => w.Owner.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => w.Duration)
                </td>
            </tr>
        }

    @Html.ActionLink("Edit", "Edit", new { id = Model.Walker.Id  }) |
    <a asp-action="Index">Back to List</a>
    </td>
    </tr>
    

</div>
